{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://connect.informatik.uni-ulm.de/coordination/taf-implementation/-/tree/main/TAF_External_Interfaces/Messaging/TCH_NOTIFY/",
  "title": "TCH_NOTIFY",
  "type": "object",
  "properties": {
    "tchReport": {
      "type": "object",
      "properties": {
        "trusteeReports": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "attestationReport": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "appraisal": {
                      "type": "integer"
                    },
                    "claim": {
                      "type": "string"
                    },
                    "timestamp": {
                      "type": "string",
                    }
                  },
                  "required": ["appraisal", "claim", "timestamp"]
                }
              },
              "trusteeID": {
                "type": "string"
              }
            },
            "required": ["attestationReport", "trusteeID"]
          }
        },
        "aivEvidence": {
          "type": "object",
          "properties": {
            "timestamp": {
              "type": "string",
            },
            "nonce": {
              "type": "string"
            },
            "signatureAlgorithmType": {
              "type": "string"
            },
            "signature": {
              "type": "string"
            },
            "keyRef": {
              "type": "string"
            }
          },
          "required": ["timestamp", "nonce", "signatureAlgorithmType", "signature", "keyRef"]
        }
      },
      "required": ["trusteeReports", "aivEvidence"]
    },
    "evidence": {
      "type": "object",
      "properties": {
        "timestamp": {
          "type": "string",
        },
        "signatureAlgorithmType": {
          "type": "string"
        },
        "signature": {
          "type": "string"
        },
        "keyRef": {
          "type": "string"
        }
      },
      "required": ["timestamp", "signatureAlgorithmType", "signature", "keyRef"]
    }
  },
  "required": ["tchReport", "evidence"]
}
