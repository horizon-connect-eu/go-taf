{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://connect.informatik.uni-ulm.de/coordination/taf-implementation/-/tree/main/TAF_External_Interfaces/Messaging/TAS_SUBSCRIBE_REQUEST/",
    "title": "TAS_SUBSCRIBE_REQUEST",
    "type": "object",
    "properties": {
      "sessionId": {
        "type": "string"
      },
      "subscribe" : {
        "type": "object",
        "description" : "The query selector to be used for the subscription. If empty, all trust model instances of the session will be used.",      
        "properties": {
          "filter": {
            "type": "array",
            "description" : "A potentially empty list of targets",
            "items": {
                "type": "string"
              },
            "minItems": 0
          }
        },
        "required": [
          "filter"
        ]
      },    
      "trigger" : {
        "type" : "string",
        "description" : "The trigger to be used for dispatching notifications upon a change in values.",
        "enum" : ["TRUST_DECISION", "ACTUAL_TRUSTWORTHINESS_LEVEL"]
      }
    },
    "required": [
      "sessionId",
      "subscribe",
      "trigger"
    ]
  }